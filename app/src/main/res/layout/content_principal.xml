<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_principal" tools:context="com.cgg.flux.Principal"
    android:background="@mipmap/diag">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/But1"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@mipmap/rap"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/But3"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@mipmap/rock" />

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/But2"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@mipmap/eletro"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/But4"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@mipmap/nenhum" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tipo de mÃºsica favorita?"
        android:id="@+id/text1"
        android:textSize="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/som"
        android:background="@mipmap/oie_transparent2"
        android:layout_below="@+id/timer"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:textColor="#ffffff" />
</RelativeLayout>
